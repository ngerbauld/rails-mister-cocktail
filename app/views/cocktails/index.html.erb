<div class="container">
  <h1>Cocktails</h1>
  <% @cocktails.each do |c|%>
    <div class="card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos"
      <h2><%= link_to c.name, cocktail_path(c) %></h2>
      <p><%= link_to "Delete", cocktail_path(c), method: :delete, data: {confirm: "Are you sure you want to delete?"} %></p>
    </div>
  </div>
  <% end %>
<p><%= link_to "Add new Cocktail!", new_cocktail_path, class:"btn btn-primary btn-lg" %></p>
</div>
